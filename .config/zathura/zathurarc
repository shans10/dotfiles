# STARTUP OPTIONS #
#
set adjust-open width
set guioptions ""

# Copy selection to system clipboard
set selection-clipboard clipboard
set window-title-home-tilde true
set statusbar-home-tilde true
set adjust-open "best-fit"

# Enable incremental search
set incremental-search true

# Zoom and scroll step size
set zoom-step 20
set scroll-step 80

# COLORSCHEME #
#
# Catppuccin-mocha Theme for Zathura
set notification-error-bg       "#1e1e2e" # bg
set notification-error-fg       "#f38ba8" # bright:red
set notification-warning-bg     "#1e1e2e" # bg
set notification-warning-fg     "#f9e2af" # bright:yellow
set notification-bg             "#1e1e2e" # bg
set notification-fg             "#a6e3a1" # bright:green

set completion-bg               "#45475a" # bg2
set completion-fg               "#cdd6f4" # fg
set completion-group-bg         "#24273a" # bg1
set completion-group-fg         "#585b70" # gray
set completion-highlight-bg     "#89b4fa" # bright:blue
set completion-highlight-fg     "#45475a" # bg2

# Define the color in index mode
set index-bg                    "#45475a" # bg2
set index-fg                    "#cdd6f4" # fg
set index-active-bg             "#89b4fa" # bright:blue
set index-active-fg             "#45475a" # bg2

set inputbar-bg                 "#1e1e2e" # bg
set inputbar-fg                 "#cdd6f4" # fg

set statusbar-bg                "#45475a" # bg2
set statusbar-fg                "#cdd6f4" # fg

set highlight-color             "#f9e2af" # bright:yellow
set highlight-active-color      "#ff9e64" # bright:orange

set default-bg                  "#1e1e2e" # bg
set default-fg                  "#cdd6f4" # fg
set render-loading              true
set render-loading-bg           "#1e1e2e" # bg
set render-loading-fg           "#cdd6f4" # fg

# Recolor book content's color
set recolor-lightcolor          "#1e1e2e" # bg
set recolor-darkcolor           "#cdd6f4" # fg
set recolor                     "true"
set recolor-keephue             "true"    # keep original color for images

# KEYBINDINGS #
#
# Zoom
map <C-i> zoom in
map <C-o> zoom out

# Quit
map <M-q> quit

# Toggle Statusbar
map <M-s> toggle_statusbar

# Print
map <C-p> print
